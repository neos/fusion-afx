{
  "name": "neos/fusion-afx",
  "description": "JSX inspired compact syntax for Neos.Fusion",
  "type": "neos-package",
  "license": "GPL-3.0-or-later",
  "replace": {
    "packagefactory/atomicfusion-afx": "*"
  },
  "require": {
    "neos/fusion": "^3.2.0 || ^4.0.0 || dev-master",
    "packagefactory/afx": "dev-feature/spreads"
  },
  "repositories": {
    "mficzel-afx": {
      "type": "vcs",
      "url": "https://github.com/mficzel/afx.git"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0.0"
  },
  "autoload": {
    "psr-4": {
      "Neos\\Fusion\\Afx\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Neos\\Fusion\\Afx\\Tests\\": "Tests/"
    }
  },
  "extra": {
    "neos": {
      "package-key": "Neos.Fusion.Afx"
    }
  },
  "scripts": {
    "test:functional": [
      "composer install",
      "vendor/bin/phpunit Tests/Functional"
    ],
    "test": [
      "composer test:functional"
    ]
  }
}
